generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subjects {
  id String @id
  name String
  description String
  createdAt DateTime @default(now())
  createdBy String
}

model M_messages {
  id String @id
  title String
  content String
  code String
  code_language String
  media Bytes
  subject_ID String
  createdAt DateTime @default(now())
  createdBy String
}